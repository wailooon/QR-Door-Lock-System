<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp">

        </ImageView>

        <TextView
            android:id="@+id/deviceName_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:text="Example 1"
            android:textColor="@color/colorStatusBar"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/dateTime_history"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceName_history"
            android:layout_marginStart="139dp"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Example 4"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/lockStatus_history"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Example 3"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/description_history"
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="101dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Example 2"
            android:textAlignment="viewStart"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>